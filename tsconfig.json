{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "jsx": "preserve",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./typings/index.d.ts"
  ]
}
